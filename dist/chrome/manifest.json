{
	"name": "YouTube Experiment",
	"version": "1.2.0",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": [
				"https://*.youtube.com/*",
				"https://*.youtu.be/*"
			],
			"js": [
				"content-script.js"
			]
		}
	],
	"permissions": [
		"tabs"
	],
	"host_permissions": [
		"*://*.youtube.com/*",
		"*://*.youtu.be/*",
		"*://ytdpnl.fmdj.fr/*"
	],
	"background": {
		"service_worker": "background.js"
	}
}